<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/tvId"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:textSize="16dp"
    android:text="ID:"
    android:textColor="@color/black"
    android:textStyle="bold"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/userId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tvId"
        app:layout_constraintTop_toTopOf="@id/tvId"
        android:layout_marginStart="32dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/CreatedData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvId"
        android:textSize="16dp"
        android:text="Created data:"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/userCreatedData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/CreatedData"
        app:layout_constraintTop_toTopOf="@id/CreatedData"
        android:layout_marginStart="32dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/commentatorHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CreatedData"
        android:textSize="16dp"
        android:text="Handle:"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/userHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/CreatedData"
        app:layout_constraintTop_toTopOf="@id/commentatorHandle"
        android:layout_marginStart="32dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/Locale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/commentatorHandle"
        android:textSize="16dp"
        android:text="Locale:"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/userLocale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/CreatedData"
        app:layout_constraintTop_toTopOf="@id/Locale"
        android:layout_marginStart="32dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Locale"
        android:textSize="16dp"
        android:text="Text:"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/userText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/CreatedData"
        app:layout_constraintTop_toTopOf="@id/tvtext"
        android:layout_marginStart="32dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvtext"
        android:textSize="16dp"
        android:text="Rating:"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/userRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/CreatedData"
        app:layout_constraintTop_toTopOf="@id/tvRating"
        android:layout_marginStart="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>